import javax.swing.*; 
import java.awt.*; 
import java.awt.event.*; 
  
class entryData implements ActionListener { 
 private Container c;
 
 private JLabel name; //name 
 private JTextField fname; //further name 
 
 private JLabel add;//address information
 private JTextArea fadd;//further address information
 private JTextArea ffadd; //further more on address
 
 private JLabel pc;//postcode (or Eircode)
 private JTextField fpc; //further (additions to) postcode
 
 private JLabel loc; //regarding the location type
 private JComboBox floc; //further regarding the location type
 
 private JLabel ppr; //principal private residence 
 private JRadioButton yes; //yes it is the ppr
 private JRadioButton no; //no it isn't the ppr
 private ButtonGroup yesno; //option for selecting yes or no for ppr
 
 private JCheckBox agree; //agreeing to allow entry of data
 private JButton enter; //finalise the entry of the details
 private JButton clear; //if the user wants to reset their information
 private JTextArea tout; 
 private JLabel fclear;//further on clearing 
  
 private String locs[] = { "City", "Large Town", "Small Town", "Village", "Countryside"}; 
 // constructor, to initialize the components 
 // with default values. 
 public entryData(){   
  c = getContentPane(); 
  c.setLayout(null); 
  
  name = new JLabel("Name"); 
  name.setFont(new Font("TimesRoman", Font.BOLD, 20)); 
  name.setSize(100, 20); 
  name.setLocation(100, 100); 
  c.add(name); 
  fname = new JTextField(); 
  fname.setFont(new Font("TimesRoman", Font.PLAIN, 15)); 
  fname.setSize(190, 20); 
  fname.setLocation(200, 100); 
  c.add(fname); 
  
  add = new JLabel("Address"); 
  add.setFont(new Font("TimesRoman", Font.BOLD, 20)); 
  add.setSize(100, 20); 
  add.setLocation(100, 150); 
  c.add(add); 
  fadd = new JTextArea(); 
  fadd.setFont(new Font("TimesRoman", Font.PLAIN, 15)); 
  fadd.setSize(200, 75); 
  fadd.setLocation(200, 200); 
  fadd.setLineWrap(true); 
  c.add(fadd); 
  
  pc = new JLabel("Postcode"); 
  pc.setFont(new Font("TimesRoman", Font.BOLD, 20)); 
  pc.setSize(100, 20); 
  pc.setLocation(100, 250); 
  c.add(pc); 
  fpc = new JTextField(); 
  fpc.setFont(new Font("TimesRoman", Font.PLAIN, 15)); 
  fpc.setSize(150, 20); 
  fpc.setLocation(200, 250); 
  c.add(fpc); 
  
  loc = new JLabel("Location type"); 
  loc.setFont(new Font("TimesRoman", Font.BOLD, 20)); 
  loc.setSize(100, 20); 
  loc.setLocation(100, 300); 
  c.add(loc); 
  floc = new JComboBox(locs); 
  floc.setFont(new Font("TimesRoman PLAIN", Font.PLAIN, 15)); 
  floc.setSize(50, 20); 
  floc.setLocation(200, 300); 
  c.add(floc); 
  
  ppr = new JLabel("Principal Private Residence"); 
  ppr.setFont(new Font("TimesRoman", Font.BOLD, 20)); 
  ppr.setSize(100, 20); 
  ppr.setLocation(100, 400); 
  c.add(ppr); 
  yes = new JRadioButton("Yes"); 
  yes.setFont(new Font("TimesRoman", Font.PLAIN, 15)); 
  yes.setSelected(true); 
  yes.setSize(75, 20); 
  yes.setLocation(200, 400); 
  c.add(yes); 
  no = new JRadioButton("No"); 
  no.setFont(new Font("TimesRoman", Font.PLAIN, 15)); 
  no.setSelected(false); 
  no.setSize(80, 20); 
  no.setLocation(275, 400); 
  c.add(no); 
  yesno = new ButtonGroup(); 
  yesno.add(yes); 
  yesno.add(no); 
  
  agree = new JCheckBox("Data Entry Agreement"); 
  agree.setFont(new Font("Arial", Font.BOLD, 20)); 
  agree.setSize(250, 20); 
  agree.setLocation(150, 400); 
  c.add(agree); 
  enter = new JButton("Enter"); 
  enter.setFont(new Font("TimesRoman", Font.BOLD, 20)); 
  enter.setSize(100, 20); 
  enter.setLocation(150, 450); 
  enter.addActionListener(this); 
  c.add(enter); 
  clear = new JButton("Clear"); 
  clear.setFont(new Font("TimesRoman", Font.BOLD, 20)); 
  clear.setSize(100, 20); 
  clear.setLocation(270, 450); 
  clear.addActionListener(this); 
  c.add(clear); 
  
  tout = new JTextArea(); 
  tout.setFont(new Font("TimesRoman", Font.PLAIN, 15)); 
  tout.setSize(300, 400); 
  tout.setLocation(500, 100); 
  tout.setLineWrap(true); 
  tout.setEditable(false); 
  c.add(tout); 
  
  fclear = new JLabel(""); 
  fclear.setFont(new Font("TimesRoman", Font.BOLD, 20)); 
  fclear.setSize(500, 25); 
  fclear.setLocation(100, 500); 
  c.add(fclear); 
  
  ffadd = new JTextArea(); 
  ffadd.setFont(new Font("TimesRoman", Font.PLAIN, 15)); 
  ffadd.setSize(200, 75); 
  ffadd.setLocation(580, 175); 
  ffadd.setLineWrap(true); 
  c.add(ffadd); 
  
  setVisible(true); 
 } 
    // method actionPerformed() 
    // to get the action performed 
    // by the user and act accordingly 
 public void actionPerformed(ActionEvent e){ 
  if (e.getSource() == enter) { 
   if (agree.isSelected()) { 
    String data1; 
    String data = "Name : "+ fname.getText() + "\n" 
                   + "Postcode/Eircode: " + fpc.getText() 
                   + "\n" + "Address : " + fadd.getText() + "\n";
    if (yes.isSelected()) 
     data1 = "Is Principal Private Residence" + "\n"; 
    else
     data1 = "Is not Principal Private Residence" + "\n"; 
    String data2 = "Location type: " + (String)floc.getSelectedItem() + "\n"; 
    
    tout.setText(data + data1 + data2); 
    tout.setEditable(false); 
    fclear.setText("Registration Successfully.."); 
   } 
   else { 
    tout.setText(""); 
    ffadd.setText(""); 
    fclear.setText("Agree to " + " data agreement"); 
   } 
  } 
  else if (e.getSource() == clear) { 
   String def = ""; 
   fname.setText(def); 
   fadd.setText(def); 
   fclear.setText(def); 
   tout.setText(def); 
   agree.setSelected(false); 
   ffadd.setText(def); 
  } 
 } 
} 
// Driver Code 
class Registration { 
 public static void main(String[] args) throws Exception{ 
  MyFrame f = new MyFrame(); 
 } 
} 
